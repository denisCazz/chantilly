<style>
	.contact {
		background: var(--color-background);
		padding: 6rem 0;
	}

	[data-theme="dark"] .contact {
		background: var(--color-surface-dark);
	}

	.contact-content {
		display: grid;
		grid-template-columns: 1fr 1.5fr;
		gap: 4rem;
		align-items: center;
	}

	.contact-info {
		display: flex;
		flex-direction: column;
		gap: 2rem;
	}

	.info-item {
		display: flex;
		align-items: flex-start;
		gap: 1.5rem;
	}

	.info-icon {
		color: var(--color-primary);
		background-color: color-mix(in srgb, var(--color-primary) 15%, transparent);
		border-radius: var(--border-radius-md);
		width: 50px;
		height: 50px;
		display: grid;
		place-items: center;
		flex-shrink: 0;
	}
	
	.info-icon svg {
		width: 24px;
		height: 24px;
	}

	.info-text h3 {
		font-size: 1.2rem;
		color: var(--color-text-primary);
		margin: 0 0 0.5rem 0;
		font-weight: 600;
	}

	.info-text p {
		margin: 0;
		color: var(--color-text-secondary);
		line-height: 1.6;
	}

	.info-text a {
		color: var(--color-primary);
		text-decoration: none;
		transition: var(--transition);
	}

	.info-text a:hover {
		text-decoration: underline;
		color: var(--color-accent);
	}

	.social-links {
		display: flex;
		flex-wrap: wrap;
		gap: 1rem;
		margin-top: 1.5rem;
	}

	.instagram-highlight {
		display: inline-flex;
		align-items: center;
		justify-content: space-between;
		gap: 1.25rem;
		padding: 1.25rem 1.5rem;
		background: var(--color-highlight);
		border-radius: var(--border-radius-lg);
		color: var(--color-text);
		text-decoration: none;
		border: 1px solid var(--color-secondary);
		box-shadow: var(--shadow-sm);
		transition: transform 0.3s ease, box-shadow 0.3s ease, background 0.3s ease, color 0.3s ease, border-color 0.3s ease;
		position: relative;
		overflow: hidden;
	}

	.instagram-highlight::after {
		content: '';
		position: absolute;
		inset: 0;
		opacity: 0;
		background: linear-gradient(135deg, rgba(212, 175, 55, 0.95), rgba(18, 18, 18, 0.95));
		transition: opacity 0.3s ease;
		z-index: 0;
	}

	.instagram-highlight:hover,
	.instagram-highlight:focus-visible {
		transform: translateY(-6px);
		box-shadow: var(--shadow-md);
		border-color: rgba(212, 175, 55, 0.9);
	}

	.instagram-highlight:hover::after,
	.instagram-highlight:focus-visible::after {
		opacity: 1;
	}

	[data-theme="dark"] .instagram-highlight {
		background: var(--color-surface-alt);
		color: var(--color-text);
		border-color: rgba(212, 175, 55, 0.5);
		box-shadow: var(--shadow-sm);
	}

	[data-theme="dark"] .instagram-highlight::after {
		background: linear-gradient(135deg, rgba(212, 175, 55, 0.95), rgba(5, 5, 5, 0.95));
	}

	.instagram-content {
		display: flex;
		align-items: center;
		gap: 1.1rem;
		position: relative;
		z-index: 1;
	}

	.instagram-icon {
		flex-shrink: 0;
		color: var(--color-secondary);
		transition: color 0.3s ease, transform 0.3s ease;
	}

	.instagram-highlight:hover .instagram-icon,
	.instagram-highlight:focus-visible .instagram-icon {
		color: var(--color-white);
		transform: scale(1.05);
	}

	.instagram-text {
		text-align: left;
		color: inherit;
	}

	.instagram-text h4 {
		margin: 0 0 0.3rem 0;
		font-size: 1.05rem;
		font-weight: 600;
		letter-spacing: 0.3px;
	}

	.instagram-text p {
		margin: 0;
		font-size: 0.9rem;
		color: var(--color-text-offset);
	}

	.instagram-highlight:hover .instagram-text h4,
	.instagram-highlight:focus-visible .instagram-text h4,
	.instagram-highlight:hover .instagram-text p,
	.instagram-highlight:focus-visible .instagram-text p {
		color: rgba(255, 255, 255, 0.88);
	}

	.map-container {
		height: 450px;
		border-radius: var(--border-radius-lg);
		overflow: hidden;
		box-shadow: var(--shadow-lg);
	}

	@media (max-width: 992px) {
		.contact-content {
			grid-template-columns: 1fr;
			gap: 3rem;
		}
		.map-container {
			height: 350px;
		}
	}

	@media (max-width: 768px) {
		.contact {
			padding: 4rem 0;
		}
	}
</style>
