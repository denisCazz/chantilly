<style>
	.contact {
		background: var(--color-background);
		padding: 6rem 0;
	}

	[data-theme="dark"] .contact {
		background: var(--color-surface-dark);
	}

	.contact-content {
		display: grid;
		grid-template-columns: 1fr 1.5fr;
		gap: 4rem;
		align-items: center;
	}

	.contact-info {
		display: flex;
		flex-direction: column;
		gap: 2rem;
	}

	.info-item {
		display: flex;
		align-items: flex-start;
		gap: 1.5rem;
	}

	.info-icon {
		color: var(--color-primary);
		background-color: color-mix(in srgb, var(--color-primary) 15%, transparent);
		border-radius: var(--border-radius-md);
		width: 50px;
		height: 50px;
		display: grid;
		place-items: center;
		flex-shrink: 0;
	}
	
	.info-icon svg {
		width: 24px;
		height: 24px;
	}

	.info-text h3 {
		font-size: 1.2rem;
		color: var(--color-text-primary);
		margin: 0 0 0.5rem 0;
		font-weight: 600;
	}

	.info-text p {
		margin: 0;
		color: var(--color-text-secondary);
		line-height: 1.6;
	}

	.info-text a {
		color: var(--color-primary);
		text-decoration: none;
		transition: var(--transition);
	}

	.info-text a:hover {
		text-decoration: underline;
		color: var(--color-accent);
	}

	.social-links {
		display: flex;
		gap: 1rem;
		margin-top: 1.5rem;
	}

	.instagram-highlight {
		display: block;
		padding: 1.5rem;
		background: linear-gradient(135deg, #833ab4, #fd1d1d, #fcb045);
		border-radius: var(--border-radius-lg);
		color: white;
		text-decoration: none;
		transition: var(--transition);
		box-shadow: 0 4px 15px rgba(131, 58, 180, 0.3);
	}

	.instagram-highlight:hover {
		transform: translateY(-5px);
		box-shadow: 0 8px 25px rgba(131, 58, 180, 0.4);
	}

	.instagram-content {
		display: flex;
		align-items: center;
		gap: 1rem;
	}

	.instagram-icon {
		flex-shrink: 0;
	}

	.instagram-text h4 {
		margin: 0 0 0.25rem 0;
		font-size: 1.1rem;
		font-weight: 600;
	}

	.instagram-text p {
		margin: 0;
		font-size: 0.9rem;
		opacity: 0.9;
	}

	.map-container {
		height: 450px;
		border-radius: var(--border-radius-lg);
		overflow: hidden;
		box-shadow: var(--shadow-lg);
	}

	@media (max-width: 992px) {
		.contact-content {
			grid-template-columns: 1fr;
			gap: 3rem;
		}
		.map-container {
			height: 350px;
		}
	}

	@media (max-width: 768px) {
		.contact {
			padding: 4rem 0;
		}
	}
</style>
