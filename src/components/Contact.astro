<style>
	.contact {
		background: var(--color-gray-light);
	}
	
	.contact-content {
		display: grid;
		grid-template-columns: 1fr 1fr;
		gap: 4rem;
		margin-bottom: 3rem;
	}
	
	.contact-info {
		display: flex;
		flex-direction: column;
		gap: 2rem;
	}
	
	.info-item {
		display: flex;
		align-items: flex-start;
		gap: 1rem;
		padding: 1.5rem;
		background: var(--color-white);
		border-radius: var(--border-radius-lg);
		box-shadow: var(--shadow);
		transition: var(--transition);
	}
	
	.info-item:hover {
		transform: translateY(-3px);
		box-shadow: var(--shadow-lg);
	}
	
	.info-icon {
		font-size: 2rem;
		flex-shrink: 0;
		margin-top: 0.25rem;
	}
	
	.info-content {
		flex: 1;
	}
	
	.info-content h3 {
		color: var(--color-primary);
		margin-bottom: 0.75rem;
		font-size: 1.2rem;
		font-weight: 600;
	}
	
	.info-content p {
		color: var(--color-text-light);
		line-height: 1.6;
		margin: 0;
	}
	
	.phone-link {
		color: var(--color-primary);
		font-weight: 600;
		text-decoration: none;
		transition: var(--transition);
	}
	
	.phone-link:hover {
		color: var(--color-secondary);
		text-decoration: underline;
	}
	
	.contact-actions {
		display: flex;
		gap: 1rem;
		flex-wrap: wrap;
		margin-top: 1rem;
	}
	
	.contact-actions .btn {
		flex: 1;
		min-width: 150px;
		text-align: center;
		padding: 1rem 1.5rem;
		font-weight: 600;
	}
	
	.call-btn {
		background: #25D366;
		border: none;
	}
	
	.call-btn:hover {
		background: #128C7E;
	}
	
	.map-container {
		background: var(--color-white);
		border-radius: var(--border-radius-lg);
		overflow: hidden;
		box-shadow: var(--shadow);
		height: fit-content;
	}
	
	.map-placeholder iframe {
		width: 100%;
		height: 400px;
		border: none;
		display: block;
	}
	
	.social-section {
		text-align: center;
		padding: 2rem;
		background: var(--color-white);
		border-radius: var(--border-radius-lg);
		box-shadow: var(--shadow);
	}
	
	.social-section h3 {
		color: var(--color-primary);
		margin-bottom: 1.5rem;
		font-size: 1.3rem;
	}
	
	.social-links {
		display: flex;
		justify-content: center;
		gap: 1rem;
		flex-wrap: wrap;
	}
	
	.social-link {
		display: inline-block;
		padding: 0.75rem 1.5rem;
		background: var(--color-gray-light);
		color: var(--color-text);
		border-radius: var(--border-radius);
		text-decoration: none;
		transition: var(--transition);
		font-weight: 500;
	}
	
	.social-link:hover {
		transform: translateY(-2px);
		box-shadow: var(--shadow);
	}
	
	.social-link.facebook:hover {
		background: #1877F2;
		color: white;
	}
	
	.social-link.instagram:hover {
		background: linear-gradient(45deg, #f09433 0%,#e6683c 25%,#dc2743 50%,#cc2366 75%,#bc1888 100%);
		color: white;
	}
	
	.social-link.whatsapp:hover {
		background: #25D366;
		color: white;
	}
	
	@media (max-width: 768px) {
		.contact-content {
			grid-template-columns: 1fr;
			gap: 2rem;
		}
		
		.info-item {
			padding: 1.25rem;
		}
		
		.contact-actions {
			justify-content: center;
			flex-direction: column;
		}
		
		.contact-actions .btn {
			flex: none;
			width: 100%;
		}
		
		.map-placeholder iframe {
			height: 300px;
		}
		
		.social-links {
			flex-direction: column;
			align-items: center;
		}
		
		.social-link {
			width: 200px;
			text-align: center;
		}
	}
	
	@media (max-width: 480px) {
		.info-item {
			flex-direction: column;
			text-align: center;
			gap: 0.75rem;
			padding: 1rem;
		}
		
		.info-icon {
			align-self: center;
			margin-top: 0;
		}
		
		.contact-actions .btn {
			padding: 0.875rem 1rem;
			font-size: 0.9rem;
		}
		
		.map-placeholder iframe {
			height: 250px;
		}
	}
</style>
