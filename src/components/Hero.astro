---
import { Icon } from 'astro-icon/components';
---

<section id="home" class="hero">
	<div class="hero-content">
		<div class="hero-icon">
			<Icon name="mdi:coffee" />
		</div>
		<h1 class="hero-title">
			Bar <span class="highlight">Chantilly</span>
		</h1>
		<p class="hero-subtitle">
			Il tuo punto di riferimento nel cuore di Carmagnola. Colazioni, aperitivi, tabacchi e molto altro in un ambiente accogliente e familiare.
		</p>
		<div class="hero-buttons">
			<a href="/menu/" class="btn btn-primary">
				<Icon name="mdi:coffee-outline" />
				Scopri il Menu
			</a>
			<a href="#contatti" class="btn btn-secondary">
				<Icon name="mdi:phone" />
				Contattaci
			</a>
		</div>
	</div>
</section>

<style>
	.hero {
		position: relative;
		height: 90vh;
		min-height: 600px;
		display: flex;
		align-items: center;
		justify-content: center;
		text-align: center;
		overflow: hidden;
		background: var(--color-bg-light);
		padding: 0 2rem;
	}

	[data-theme="dark"] .hero {
		background: var(--color-bg-dark);
	}

	.hero-content {
		max-width: 800px;
		margin: 0 auto;
		position: relative;
		z-index: 2;
	}

	.hero-icon {
		font-size: 6rem;
		color: var(--color-primary);
		margin-bottom: 1rem;
		animation: float 3s ease-in-out infinite;
	}

	.hero-title {
		font-size: clamp(2.5rem, 5vw, 4.5rem);
		font-weight: 800;
		margin-bottom: 1rem;
		line-height: 1.2;
		color: var(--color-text);
	}

	.hero-title .highlight {
		color: var(--color-primary);
	}

	.hero-subtitle {
		font-size: clamp(1rem, 2vw, 1.25rem);
		max-width: 600px;
		margin: 0 auto 2rem;
		color: var(--color-text-offset);
	}

	.hero-buttons {
		display: flex;
		justify-content: center;
		gap: 1rem;
		flex-wrap: wrap;
	}

	.btn {
		display: inline-flex;
		align-items: center;
		gap: 0.5rem;
		padding: 0.8rem 1.8rem;
		border-radius: var(--border-radius-full);
		font-weight: 600;
		text-decoration: none;
		transition: all 0.3s ease;
		box-shadow: var(--shadow-sm);
	}

	.btn:hover {
		transform: translateY(-2px);
		box-shadow: var(--shadow-md);
	}

	.btn-primary {
		background-color: var(--color-primary);
		color: white;
	}

	.btn-primary:hover {
		background-color: hsl(var(--color-primary-hsl), 0.5, 0.55);
	}

	.btn-secondary {
		background-color: var(--color-bg-offset);
		color: var(--color-text);
		border: 1px solid var(--color-border);
	}

	.btn-secondary:hover {
		background-color: var(--color-bg-offset-2);
	}

	@keyframes float {
		0%,
		100% {
			transform: translateY(0);
		}
		50% {
			transform: translateY(-15px);
		}
	}
</style>
