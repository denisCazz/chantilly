---
import { Icon } from 'astro-icon/components';
---

<section id="home" class="hero">
	<div class="hero-content">
		<div class="hero-icons">
			<div class="hero-icon">
				<Icon name="mdi:coffee" />
			</div>
			<div class="hero-icon">
				<Icon name="mdi:cigarette" />
			</div>
		</div>
		<h1 class="hero-title">
			Bar Tabacchi <span class="highlight">Chantilly</span>
		</h1>
		<p class="hero-subtitle">
			Il tuo punto di riferimento nel cuore di Carmagnola. Colazioni, aperitivi, tabacchi e molto altro in un ambiente accogliente e familiare.
		</p>
		<div class="hero-buttons">
			<a href="/menu/" class="btn btn-primary">
				<Icon name="mdi:coffee-outline" />
				Scopri il Menu
			</a>
			<a href="#contatti" class="btn btn-secondary">
				<Icon name="mdi:phone" />
				Contattaci
			</a>
		</div>
	</div>
</section>

<style>
	.hero {
		position: relative;
		height: 90vh;
		min-height: 600px;
		display: flex;
		align-items: center;
		justify-content: center;
		text-align: center;
		overflow: hidden;
		background: radial-gradient(circle at top, rgba(212, 175, 55, 0.24), rgba(219, 242, 176, 0.3) 55%, transparent 75%), var(--color-bg-light);
		padding: 0 2rem;
	}

	[data-theme="dark"] .hero {
		background: radial-gradient(circle at top, rgba(212, 175, 55, 0.2), rgba(38, 66, 36, 0.55) 60%, transparent 80%), var(--color-bg-dark);
	}

	.hero-content {
		max-width: 800px;
		margin: 0 auto;
		position: relative;
		z-index: 2;
	}

	.hero-icons {
		display: flex;
		justify-content: center;
		align-items: center;
		gap: 2rem;
		margin-bottom: 1rem;
	}

	.hero-icon {
		font-size: 6rem;
		color: var(--color-primary);
		animation: float 3s ease-in-out infinite;
	}

	.hero-icon:nth-child(2) {
		animation: floatRotated 3s ease-in-out infinite;
		animation-delay: -1.5s;
	}

	.hero-title {
		font-size: clamp(2.5rem, 5vw, 4.5rem);
		font-weight: 600;
		margin-bottom: 1rem;
		line-height: 1.2;
		color: var(--color-text);
	}

	.hero-title .highlight {
		color: var(--color-primary);
	}

	.hero-subtitle {
		font-size: clamp(1rem, 2vw, 1.25rem);
		max-width: 600px;
		margin: 0 auto 2rem;
		color: var(--color-text-offset);
	}

	.hero-buttons {
		display: flex;
		justify-content: center;
		gap: 1rem;
		flex-wrap: wrap;
	}

	.btn {
		display: inline-flex;
		align-items: center;
		gap: 0.65rem;
		padding: 0.85rem 2rem;
		border-radius: var(--border-radius-full);
		font-weight: 600;
		text-decoration: none;
		transition: transform 0.25s ease, box-shadow 0.25s ease, background 0.25s ease;
		box-shadow: var(--shadow-sm);
	}

	.btn:hover {
		transform: translateY(-3px);
		box-shadow: var(--shadow-md);
	}

	.btn-primary {
		background-color: var(--color-secondary);
		color: var(--color-white);
		border: 1px solid var(--color-secondary);
	}

	.btn-primary:hover {
		background-color: #c19c2f;
		border-color: #c19c2f;
	}

	.btn-secondary {
		background-color: var(--color-highlight);
		color: var(--color-text);
		border: 1px solid var(--color-border);
	}

	.btn-secondary:hover {
		background-color: var(--color-bg-offset);
		border-color: var(--color-border-strong);
	}

	@keyframes float {
		0%,
		100% {
			transform: translateY(0);
		}
		50% {
			transform: translateY(-15px);
		}
	}

	@keyframes floatRotated {
		0%,
		100% {
			transform: rotate(-25deg) translateY(0);
		}
		50% {
			transform: rotate(-25deg) translateY(-15px);
		}
	}

	@media (max-width: 768px) {
		.hero-icons {
			gap: 1.5rem;
		}
		
		.hero-icon {
			font-size: 4rem;
		}
	}
</style>
