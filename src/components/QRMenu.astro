</div>

<style>
	.qr-section {
		padding: 4rem 0;
		background: var(--color-white);
	}
	
	.qr-container {
		display: grid;
		grid-template-columns: auto 1fr;
		gap: 3rem;
		align-items: center;
		max-width: 800px;
		margin: 0 auto;
	}
	
	.qr-code {
		background: var(--color-white);
		padding: 1rem;
		border-radius: var(--border-radius-lg);
		box-shadow: var(--shadow-lg);
		border: 2px solid var(--color-gray);
	}
	
	.qr-info h3 {
		color: var(--color-primary);
		font-size: 1.5rem;
		margin-bottom: 1rem;
	}
	
	.qr-info p {
		color: var(--color-text-light);
		line-height: 1.6;
		margin-bottom: 2rem;
	}
	
	.qr-instructions {
		display: flex;
		flex-direction: column;
		gap: 1rem;
		margin-bottom: 2rem;
	}
	
	.instruction {
		display: flex;
		align-items: center;
		gap: 1rem;
	}
	
	.step {
		display: flex;
		align-items: center;
		justify-content: center;
		width: 30px;
		height: 30px;
		background: var(--color-primary);
		color: var(--color-white);
		border-radius: 50%;
		font-weight: 600;
		font-size: 0.9rem;
	}
	
	.direct-link {
		padding: 1rem;
		background: var(--color-warm);
		border-radius: var(--border-radius);
		border-left: 4px solid var(--color-secondary);
	}
	
	.direct-link p {
		margin: 0 0 0.5rem 0;
		font-size: 0.9rem;
		color: var(--color-text-light);
	}
	
	.menu-link {
		color: var(--color-primary);
		font-weight: 600;
		text-decoration: none;
		font-family: monospace;
		font-size: 1rem;
	}
	
	.menu-link:hover {
		text-decoration: underline;
	}
	
	@media (max-width: 768px) {
		.qr-container {
			grid-template-columns: 1fr;
			gap: 2rem;
			text-align: center;
		}
		
		.qr-code {
			justify-self: center;
		}
		
		.qr-instructions {
			flex-direction: row;
			justify-content: center;
			flex-wrap: wrap;
		}
		
		.instruction {
			flex-direction: column;
			text-align: center;
			gap: 0.5rem;
		}
	}
	
	@media (max-width: 480px) {
		.qr-code svg {
			width: 150px;
			height: 150px;
		}
		
		.qr-instructions {
			flex-direction: column;
		}
		
		.instruction {
			flex-direction: row;
		}
	}
</style>
