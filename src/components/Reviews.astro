<style>
	.reviews {
		background: var(--color-warm);
	}
	
	.reviews-container {
		display: grid;
		grid-template-columns: repeat(auto-fit, minmax(300px, 1fr));
		gap: 2rem;
		margin-bottom: 3rem;
	}
	
	.review-card {
		background: var(--color-white);
		padding: 2rem;
		border-radius: var(--border-radius-lg);
		box-shadow: var(--shadow);
		text-align: center;
		position: relative;
		transition: var(--transition);
	}
	
	.review-card:hover {
		transform: translateY(-5px);
		box-shadow: var(--shadow-lg);
	}
	
	.review-card::before {
		content: '"';
		position: absolute;
		top: -10px;
		left: 20px;
		font-size: 4rem;
		color: var(--color-accent);
		font-family: var(--font-heading);
		line-height: 1;
		opacity: 0.3;
	}
	
	.review-stars {
		font-size: 1.2rem;
		margin-bottom: 1rem;
	}
	
	.review-text {
		font-size: 1.1rem;
		line-height: 1.6;
		color: var(--color-text);
		font-style: italic;
		margin: 1.5rem 0;
		border: none;
		padding: 0;
	}
	
	.review-author {
		font-weight: 500;
		color: var(--color-primary);
		font-size: 0.9rem;
		margin-top: 1rem;
	}
	
	.reviews-cta {
		text-align: center;
		background: var(--color-white);
		padding: 2rem;
		border-radius: var(--border-radius-lg);
		box-shadow: var(--shadow);
	}
	
	.reviews-cta p {
		color: var(--color-text);
		font-size: 1.1rem;
		margin: 0;
	}
	
	.reviews-cta strong {
		color: var(--color-primary);
	}
	
	/* Animazione di caricamento delle recensioni */
	.review-card {
		animation: slideUp 0.6s ease-out forwards;
		opacity: 0;
		transform: translateY(30px);
	}
	
	.review-card:nth-child(1) { animation-delay: 0.1s; }
	.review-card:nth-child(2) { animation-delay: 0.2s; }
	.review-card:nth-child(3) { animation-delay: 0.3s; }
	.review-card:nth-child(4) { animation-delay: 0.4s; }
	.review-card:nth-child(5) { animation-delay: 0.5s; }
	.review-card:nth-child(6) { animation-delay: 0.6s; }
	
	@keyframes slideUp {
		to {
			opacity: 1;
			transform: translateY(0);
		}
	}
	
	@media (max-width: 768px) {
		.reviews-container {
			grid-template-columns: 1fr;
			gap: 1.5rem;
		}
		
		.review-card {
			padding: 1.5rem;
		}
		
		.review-text {
			font-size: 1rem;
		}
		
		.reviews-cta {
			padding: 1.5rem;
		}
		
		.reviews-cta p {
			font-size: 1rem;
		}
	}
	
	@media (max-width: 480px) {
		.review-card {
			padding: 1rem;
		}
		
		.review-text {
			font-size: 0.9rem;
		}
	}
</style>
