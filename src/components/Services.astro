      <!-- Tabaccheria -->
      <div class="service-card">
        <div class="service-icon">
          <!-- ...existing smoking icon... -->
          <svg xmlns="http://www.w3.org/2000/svg" class="icon icon-tabler icon-tabler-smoking" width="44" height="44" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" fill="none" stroke-linecap="round" stroke-linejoin="round"><path stroke="none" d="M0 0h24v24H0z" fill="none"/><path d="M12 17v4" /><path d="M8 17v4" /><path d="M16 17v4" /><path d="M20 17h-16" /><path d="M20 13h-16" /><path d="M18 9a4 4 0 0 0 -4 -4h-4a4 4 0 0 0 -4 4v4h16v-4z" /></svg>
