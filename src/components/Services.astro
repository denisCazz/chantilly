      </div>
    </div>
  </div>
</section>

<style>
  .services {
    background: var(--color-surface);
    padding: 6rem 0;
  }

  [data-theme="dark"] .services {
    background: linear-gradient(180deg, rgba(26, 39, 26, 0.92) 0%, rgba(8, 13, 7, 0.98) 100%);
  }

  .section-subtitle {
    max-width: 600px;
    margin: 1rem auto 0;
    color: var(--color-text-light);
  }

  .services-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(280px, 1fr));
    gap: 2rem;
    margin-top: 3.5rem;
  }

  .service-card {
    background: var(--color-surface);
    border: 1px solid var(--color-border);
    border-radius: var(--border-radius-lg);
    padding: 2.5rem 2.25rem;
    text-align: center;
    transition: transform 0.3s ease, box-shadow 0.3s ease, border-color 0.3s ease, background 0.3s ease;
    position: relative;
    overflow: hidden;
    display: flex;
    flex-direction: column;
    align-items: center;
    gap: 1rem;
    box-shadow: var(--shadow-sm);
  }

  [data-theme="dark"] .service-card {
    background: var(--color-surface);
    border-color: var(--color-border);
    box-shadow: var(--shadow);
  }

  .service-card::after {
    content: '';
    position: absolute;
    inset: 0;
    background: radial-gradient(circle at top, rgba(246, 206, 134, 0.25), transparent 60%);
    opacity: 0;
    transition: opacity 0.3s ease;
    pointer-events: none;
  }

  .service-card:hover::after {
    opacity: 1;
  }

  .service-card:hover {
    transform: translateY(-10px);
    box-shadow: var(--shadow-md);
    border-color: var(--color-secondary);
    background: var(--color-highlight);
  }

  [data-theme="dark"] .service-card:hover {
    background: var(--color-surface-alt);
    border-color: var(--color-secondary);
    box-shadow: var(--shadow-lg);
  }

  .service-icon {
    color: var(--color-secondary);
    margin-bottom: 0.5rem;
    background-color: rgba(191, 232, 165, 0.25);
    width: 70px;
    height: 70px;
    border-radius: 50%;
    display: grid;
    place-items: center;
    flex-shrink: 0;
    border: 1px solid transparent;
    transition: border-color 0.3s ease, background-color 0.3s ease, color 0.3s ease;
  }

  [data-theme="dark"] .service-icon {
    color: var(--color-secondary);
    background-color: rgba(191, 232, 165, 0.18);
    border-color: rgba(212, 175, 55, 0.28);
  }

  .service-card:hover .service-icon {
    border-color: var(--color-secondary);
    background-color: rgba(191, 232, 165, 0.32);
  }

  .service-icon svg {
    width: 36px;
    height: 36px;
  }

  .service-card h3 {
    font-size: 1.35rem;
    color: var(--color-text);
    font-weight: 600;
    margin-bottom: 0.5rem;
    letter-spacing: 0.1px;
  }

  .service-card p {
    color: var(--color-text-secondary);
    font-size: 1rem;
    line-height: 1.7;
    flex-grow: 1;
  }

  [data-theme="dark"] .service-card h3,
  [data-theme="dark"] .service-card p {
    color: var(--color-text);
  }

  .service-card.special {
    background: linear-gradient(135deg, var(--color-primary), var(--color-secondary));
    color: #fff;
    border: 1px solid rgba(255, 255, 255, 0.25);
    box-shadow: var(--shadow-md);
  }

  [data-theme="dark"] .service-card.special {
    background: linear-gradient(140deg, rgba(246, 206, 134, 0.9), rgba(242, 181, 91, 0.75));
    color: #1a130f;
    border-color: rgba(26, 19, 15, 0.3);
  }

  .service-card.special .service-icon {
    background-color: rgba(255, 255, 255, 0.2);
    color: inherit;
    border-color: transparent;
  }

  .service-card.special p {
    color: inherit;
  }

  @media (max-width: 768px) {
    .services {
      padding: 4.5rem 0;
    }

    .service-card {
      padding: 2rem 1.75rem;
    }
  }
</style>
