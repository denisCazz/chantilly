<style>
	.cookie-page {
		padding-top: 80px;
	}
	
	.cookie-hero {
		background: linear-gradient(135deg, var(--color-warm) 0%, var(--color-accent) 100%);
		padding: 3rem 0;
		text-align: center;
	}
	
	.hero-title {
		font-size: 3rem;
		color: var(--color-primary);
		margin-bottom: 1rem;
	}
	
	.hero-subtitle {
		font-size: 1.2rem;
		color: var(--color-text-light);
		max-width: 600px;
		margin: 0 auto;
	}
	
	.cookie-content {
		background: var(--color-background);
	}
	
	.content-wrapper {
		max-width: 800px;
		margin: 0 auto;
	}
	
	.cookie-section {
		margin-bottom: 2.5rem;
		padding: 2rem;
		background: var(--color-surface);
		border-radius: var(--border-radius-lg);
		box-shadow: var(--shadow);
	}
	
	.cookie-section h2 {
		color: var(--color-primary);
		margin-bottom: 1rem;
		font-size: 1.5rem;
	}
	
	.cookie-section h4 {
		color: var(--color-primary);
		margin-bottom: 0.5rem;
	}
	
	.cookie-section p {
		margin-bottom: 1rem;
		line-height: 1.7;
		color: var(--color-text);
	}
	
	.cookie-section ul {
		margin: 1rem 0;
		padding-left: 2rem;
	}
	
	.cookie-section li {
		margin-bottom: 0.5rem;
		color: var(--color-text);
	}
	
	.cookie-section a {
		color: var(--color-primary);
		text-decoration: underline;
	}
	
	.cookie-section a:hover {
		color: var(--color-secondary);
	}
	
	.cookie-table {
		background: var(--color-background);
		border-radius: var(--border-radius);
		padding: 1rem;
		margin: 1rem 0;
	}
	
	.cookie-item {
		display: grid;
		grid-template-columns: 1fr 2fr 1fr;
		gap: 1rem;
		padding: 1rem;
		border-bottom: 1px solid var(--color-gray);
		align-items: center;
	}
	
	.cookie-item:last-child {
		border-bottom: none;
	}
	
	.cookie-name {
		font-weight: 600;
		color: var(--color-primary);
		font-family: monospace;
		background: var(--color-gray-light);
		padding: 0.2rem 0.5rem;
		border-radius: 4px;
	}
	
	.cookie-purpose {
		color: var(--color-text);
	}
	
	.cookie-duration {
		color: var(--color-text-light);
		font-size: 0.9rem;
	}
	
	.browser-instructions {
		margin: 1.5rem 0;
	}
	
	.browser-item {
		margin-bottom: 1rem;
		padding: 1rem;
		background: var(--color-background);
		border-radius: var(--border-radius);
		border-left: 4px solid var(--color-accent);
	}
	
	.browser-item h4 {
		margin-bottom: 0.5rem;
	}
	
	.browser-item p {
		margin: 0;
		font-size: 0.9rem;
		color: var(--color-text-light);
	}
	
	.back-to-home {
		text-align: center;
		margin-top: 3rem;
		display: flex;
		gap: 1rem;
		justify-content: center;
		flex-wrap: wrap;
	}
	
	@media (max-width: 768px) {
		.hero-title {
			font-size: 2.5rem;
		}
		
		.cookie-section {
			padding: 1.5rem;
		}
		
		.content-wrapper {
			padding: 0 1rem;
		}
		
		.cookie-item {
			grid-template-columns: 1fr;
			gap: 0.5rem;
		}
		
		.back-to-home {
			flex-direction: column;
			align-items: center;
		}
	}
</style>
