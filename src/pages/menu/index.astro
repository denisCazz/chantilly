<style>
	.menu-page {
		padding-top: 80px;
	}
	
	.hero-menu {
		background: linear-gradient(135deg, var(--color-warm) 0%, var(--color-accent) 100%);
		padding: 3rem 0;
		text-align: center;
	}
	
	.hero-title {
		font-size: 3rem;
		color: var(--color-primary);
		margin-bottom: 1rem;
		font-weight: 600;
	}
	
	.hero-subtitle {
		font-size: 1.2rem;
		color: var(--color-text-light);
		max-width: 600px;
		margin: 0 auto;
	}
	
	.menu-section {
		padding: 4rem 0;
		background: var(--color-gray-light);
	}
	
	.menu-categories {
		display: grid;
		grid-template-columns: repeat(auto-fit, minmax(350px, 1fr));
		gap: 2rem;
		margin-bottom: 3rem;
	}
	
	.menu-category {
		background: var(--color-white);
		border-radius: var(--border-radius-lg);
		padding: 2rem;
		box-shadow: var(--shadow);
		transition: var(--transition);
	}
	
	.menu-category:hover {
		transform: translateY(-3px);
		box-shadow: var(--shadow-lg);
	}
	
	.category-title {
		font-size: 1.5rem;
		color: var(--color-primary);
		margin-bottom: 1.5rem;
		padding-bottom: 0.5rem;
		border-bottom: 2px solid var(--color-accent);
		font-weight: 600;
	}
	
	.menu-items {
		display: flex;
		flex-direction: column;
		gap: 1rem;
	}
	
	.menu-item {
		display: flex;
		justify-content: space-between;
		align-items: flex-start;
		padding: 1rem;
		border-bottom: 1px solid var(--color-gray);
		transition: var(--transition);
		border-radius: var(--border-radius);
	}
	
	.menu-item:last-child {
		border-bottom: none;
	}
	
	.menu-item:hover {
		background: var(--color-warm);
		transform: translateX(5px);
	}
	
	.item-info {
		flex: 1;
		margin-right: 1rem;
	}
	
	.item-name {
		font-weight: 600;
		color: var(--color-text);
		font-size: 1.1rem;
		display: block;
		margin-bottom: 0.25rem;
	}
	
	.item-description {
		font-size: 0.9rem;
		color: var(--color-text-light);
		font-style: italic;
	}
	
	.item-price {
		font-weight: 700;
		color: var(--color-primary);
		font-size: 1.2rem;
		flex-shrink: 0;
	}
	
	.menu-footer {
		display: grid;
		grid-template-columns: 2fr 1fr;
		gap: 2rem;
		align-items: center;
	}
	
	.menu-note {
		background: var(--color-white);
		padding: 2rem;
		border-radius: var(--border-radius-lg);
		border-left: 4px solid var(--color-secondary);
		box-shadow: var(--shadow);
	}
	
	.menu-note p {
		margin-bottom: 0.5rem;
		color: var(--color-text-light);
		line-height: 1.6;
	}
	
	.menu-note p:last-child {
		margin-bottom: 0;
	}
	
	.menu-note a {
		color: var(--color-primary);
		font-weight: 600;
		text-decoration: none;
	}
	
	.menu-note a:hover {
		text-decoration: underline;
	}
	
	.back-to-home {
		text-align: center;
	}
	
	@media (max-width: 768px) {
		.menu-page {
			padding-top: 70px;
		}
		
		.hero-title {
			font-size: 2.5rem;
		}
		
		.hero-subtitle {
			font-size: 1.1rem;
		}
		
		.menu-categories {
			grid-template-columns: 1fr;
			gap: 1.5rem;
		}
		
		.menu-category {
			padding: 1.5rem;
		}
		
		.menu-footer {
			grid-template-columns: 1fr;
			gap: 1.5rem;
			text-align: center;
		}
		
		.menu-note {
			padding: 1.5rem;
		}
	}
	
	@media (max-width: 480px) {
		.hero-title {
			font-size: 2rem;
		}
		
		.menu-category {
			padding: 1rem;
		}
		
		.menu-item {
			flex-direction: column;
			align-items: flex-start;
			gap: 0.5rem;
		}
		
		.item-price {
			align-self: flex-end;
			font-size: 1.1rem;
		}
		
		.menu-note {
			padding: 1rem;
		}
	}
</style>
