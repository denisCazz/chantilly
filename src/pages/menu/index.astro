---
import Layout from '../../layouts/Layout.astro';
import Header from '../../components/Header.astro';
import Footer from '../../components/Footer.astro';
import Scripts from '../../components/Scripts.astro';
import { Icon } from 'astro-icon/components';
---

<Layout 
	title="Menu | Bar Chantilly" 
	description="Scopri il nostro menu completo: dalla caffetteria alle bevande, snack e servizi di tabaccheria. Qualità e convenienza nel cuore di Carmagnola."
>
	<!-- Skip link for accessibility -->
	<a href="#main" class="skip-link">Vai al contenuto principale</a>
	
	<Header />

	<main id="main" class="menu-page">
		<section class="menu-hero">
			<div class="container">
